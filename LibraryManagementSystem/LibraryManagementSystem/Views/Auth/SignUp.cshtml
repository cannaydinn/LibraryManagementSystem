@model SignUpViewModel

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card signUp-card">
        <p class="text-center fw-bold fs-3">SIGN UP</p>
        <form asp-controller="Auth" asp-action="SignUp" method="post">
            <div class="form-group">
                <label>Full Name</label>
                <input asp-for="FullName" type="text" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger fw-bold mt-1"></span>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" type="email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger fw-bold mt-1"></span>
            </div>
            <div class="form-group">
                <label >Password</label>
                <input asp-for="Password" type="password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger fw-bold mt-1"></span>
            </div>
            <div class="form-group">
                <label>Password Confirm</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger fw-bold mt-1"></span>
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input asp-for="PhoneNumber" type="number" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger fw-bold mt-1"></span>
            </div>

            <button type="submit" class="btn btn-dark mt-1">Sign Up</button>
        </form>
        <div class="mt-2">
            <a href="/Auth/Login" class="btn btn-dark login-btn">Back to Login</a>
        </div>
    </div>

</div>
